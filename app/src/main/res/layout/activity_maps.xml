<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout">


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/map"
        tools:context=".MapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_weight="2"
        android:gravity="center">

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center|bottom"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/stopLocListenerBtn"
            android:onClick="stopLocationListener"
            android:background="@null"
            android:src="@drawable/navigation_selector"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/pausedButtonsPanel">

           <ImageButton
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center|bottom"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                android:onClick="stopLocationListener"
                android:background="@null"
                android:src="@drawable/ic_navigation_red_48dp"/>

            <ImageButton
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center|bottom"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/endRouteButton"
                android:onClick="showDialog"
                android:background="@null"
                android:src="@drawable/ic_dead_end_white_48dp"/>
        </LinearLayout>

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center|top"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:layout_marginBottom="20dp"
            android:id="@+id/compassBtn"
            android:adjustViewBounds="true"
            android:onClick="goBack"
            android:background="@null"
            android:src="@drawable/ic_explore_red_48dp"/>
    </fragment>




</LinearLayout>