<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom">


        <!--Find Place for the button maybe in setting menu-->
        <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:padding="10dp"
            android:layout_gravity="center_horizontal"
            android:gravity="bottom"
            android:scaleType="fitCenter"
            android:id="@+id/playbackBtn"
            android:onClick="playbackListener"
            android:background="@null"
            android:src="@drawable/playback_selector"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >
        <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:padding="10dp"
            android:layout_gravity="bottom"
            android:scaleType="fitCenter"
            android:layout_marginBottom="20dp"
            android:id="@+id/loadRoutesBtn"
            android:onClick="loadNewRoute"
            android:background="@null"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_view_list_red_48dp"/>
        <SeekBar
            android:id="@+id/route_seekbar"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:layout_gravity="bottom"
            android:padding="10dp"
            />

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="bottom"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/stopLocListenerBtn"
            android:onClick="stopLocationListener"
            android:background="@null"
            android:src="@drawable/navigation_selector"/>

    </LinearLayout>

</LinearLayout>